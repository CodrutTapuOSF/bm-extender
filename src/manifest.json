{
	"name": "Demandware Sidebar",
	"manifest_version": 2,
	"minimum_chrome_version": "23",
	"version": "1.0.0",
	"description": "Adds a helper sidebar to the demandware BM",
	"icons": {
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"content_scripts": [{
		"run_at": "document_end",
		"matches": ["http://*/*", "https://*/*"],
		"js": ["jquery.js", "dotjs.js"]
	}],
	"web_accessible_resources": ["scripts/*.js", "styles/*.css"]
}
